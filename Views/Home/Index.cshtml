@model ServerResponse?

<div class="container">
    <div class="row col-md-12">
        <div class="d-flex align-items-center justify-content-center">
        <div class="row col-sm-3">
            <div class="row" class="@(Model != null ?"visible-item":"hidden-item")">
                    @{if (Model != null && Model.ResultCode != -1)
                    {
                            <ul>
                                <li class="text-success">@(Model.EntityId)</li>
                                <li class="text-success">@(Model.FirstName)</li>
                                <li class="text-success">@(Model.LastName)</li>
                            </ul>
                    }
                    else if (Model != null)
                    {
                            <h2 class="text-danger">@(Model.ResultMessage)</h2>
                    }}
            </div>
            <div class="row">
                <form method="post">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Username</label>
                        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" name="Username">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="Password">
                    </div>


                        <button type="submit" class="btn btn-primary mt-2">Submit</button>
                </form>
            </div>
        </div>
        </div>
    </div>
</div>